<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<title>
			{% block title %}
				DocAuPoste
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.2/css/bootstrap.min.css" integrity="sha512-p0wIO77pxglJp61ES8/3Tq1xC/0JY/LdqI7k8C+OxOJwU6XYyU6Wb8Ov+Ucv7/TjXlZa5D5J5ogdA5y5YN5yQ==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		<script src="https://kit.fontawesome.com/a076d05399.js"></script>

		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{
      encore_entry_link_tags("app")
    }}
		{% endblock %}
		{% block javascripts %}
			{{
      encore_entry_script_tags("app")
    }}
		{% endblock %}
	</head>
	<body>
		<!-- Main Navigation -->
		<nav class="navbar navbar-expand-lg navbar-dark mb-5" style="background-color: #1f3e52">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('app_base') }}">
					<img class="img-fluid align-center justify-content-center" src="{{ asset('Plastic_Omnium.svg') }}" alt="Logo de PlasticOmnium" role="img" width="125"/></a>
			</div>
			<div class="container-fluid align-center justify-content-center">
				<a
					class="navbar-brand" href="{{ path('app_base') }}">

					{# <i class="fas fa-"></i> #}
					<h1>
						<strong>
							DocAuPoste
						</strong>
					</h1>

				</a>
			</div>
			<div class="container-fluid align-center justify-content-center">
				<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
					<li
						class="nav-item">
						{# <a class="nav-link active" aria-current="page" href="#!">Home</a> #}

						{% if user is null %}
							<a class="btn btn-primary" href="{{ path('app_login') }}">Login</a>
						{% else %}
							<a class="btn btn-primary" href="{{ path('app_logout') }}">Logout</a>
						{% endif %}

					</li>
				</ul>
			</div>
			<!-- Not Authenticated -->
		{# <li class="nav-item"><button href="#" class="btn btn-primary btn-sm">Login</button></li> #}
			<!-- End Not Authenticated -->

			<!-- If Authenticated -->

			<!-- End If Authenticated -->


		</nav>
	</body>
	<!-- End Main Navigation -->
	{% block body %}
		<body>
			<div style="margin-left: 15%" class="container align-center">
				<p>
					<h1>
						<strong>

							Doc Au Poste
						</strong>
					</h1>
				</p>
				<p>
					<h3>
						<strong>
							Le site qui vous permet de trouver les documents dont vous avez besoin.</strong>
					</h3>
				</p>
				<p>
					{% for zone in zones %}
						<div class="d-flex ps-5 mb-5 mt-5  line-list">
							<a href="{{path('app_zone', {id: zone.name})}}" <span class="line-details">>
								{{ zone.name }}
								<id={{zone.id}}></span>
							</a>
						</div>
					{% endfor %}
				</p>
			</div>
		</body>
	{% endblock body %}
	<!-- Footer -->
	<footer class="container align-items-center border-top">
		<div class="d-flex flex-wrap justify-content-between  py-3 my-4 ">
			<div class="col-md-4 d-flex align-items-center">
				<span class="me-1" style="color: red">
					<i class="fas fa-heart"></i>
				</span>
				<span class="text-muted me-1">The guys and gals at</span>
				<a target="_blank" href="https://www.plasticomnium.com/en/" style="color: #25a1dd" class="mb-3  mb-md-0 text-decoration-none lh-1">PlasticOmnium</a>
			</div>
			<div>
				<a href="../">
					<i class="fa fa-arrow-circle-o-left" aria-hidden="false">Page d'Accueil</i>
				</a>
			</div>
			<ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
				<li class="ms-3">
					<a class="text-muted" target="_blank" href="https://github.com/kiloutyg/DocAuPoste2/tree/staging2">
						<i class="fab fa-github"></i>
					</a>
				</li>
			</ul>
		</div>
	</footer>
	<!-- End Footer -->
</html>
