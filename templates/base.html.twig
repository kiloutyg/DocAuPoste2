<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<title>
			{% block title %}
				DocAuPoste
			{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.2/css/bootstrap.min.css" integrity="sha512-p0wIO77pxglJp61ES8/3Tq1xC/0JY/LdqI7k8C+OxOJwU6XYyU6Wb8Ov+Ucv7/TjXlZa5D5J5ogdA5y5YN5yQ==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		<script src="https://kit.fontawesome.com/a076d05399.js"></script>
		{% block stylesheets %}
			{{
            encore_entry_link_tags("app")
        }}
		{% endblock %}
		{% block javascripts %}
			{{
            encore_entry_script_tags("app")
        }}
			<script>
				document.getElementById('upload-form').addEventListener('submit', function (event) {
var newFileName = document.getElementById('newFileName').value;

// If the newFileName is not empty, check if it has an extension
if (newFileName && ! newFileName.includes('.')) {
event.preventDefault(); // Cancel the form submission
alert('Please add a file extension to the file name.');
}
});
			</script>
		{% endblock %}
	</head>
	<body>
		<!-- Main Navigation -->
		<nav class="navbar navbar-expand-lg navbar-dark mb-5" style="background-color: #1f3e52">
			<div class="container">
				<a class="navbar-brand" href="{{ path('app_base') }}">
					<img class="img-fluid align-center justify-content-center" src="{{ asset('Plastic_Omnium.svg') }}" alt="Logo de PlasticOmnium" role="img" width="125"/></a>
				<a class="navbar-brand" href="{{ path('app_base') }}">
					<h1>
						<strong>
							DocAuPoste
						</strong>
					</h1>
				</a>
				<div></div>
				<div class="ms-auto d-flex align-items-center">
					{% if app.user is null %}
						<a class="btn btn-primary" href="{{ path('app_login') }}">Connexion</a>
					{% else %}
						<p>
							<strong>
								{{ app.user.username|capitalize }}
							</strong>
							<a class="btn btn-primary" href="{{ path('app_logout') }}">Déconnexion</a>
						</p>
					{% endif %}
				</div>
			</div>
		</nav>
		<!-- End Main Navigation -->

		<div class="container">
			{% include "services/_toasts.html.twig" %}

			{% if users is defined %}
				{% if users is empty %}
					<form class="d-flex flex-wrap justify-content-between" action="{{ path('app_create_super_admin') }}" method="post">
						{% include "services/accountservices/create_account.html.twig" %}
					</form>
				{% endif %}
			{% endif %}


		</div>

		<div class="container">
			{% block body %}
				{% if app.user %}
					{% if  is_granted('ROLE_SUPER_ADMIN', object = null, field = null)%}
						<aside class="position-absolute end-0">
							<a href="{{ path('app_super_admin') }}" class="btn" style="color:white">Centre de Super-Administration</a>
						</aside>
					{% endif %}
				{% endif %}
				<p>
					<h1>
						<strong>
							Doc Au Poste
						</strong>
					</h1>
				</p>
				<p>
					<h3>
						<strong>
							Le site qui vous permet de trouver les documents dont vous avez besoin.</strong>
					</h3>
				</p>
				<p>
					<div class="d-flex flex-column ">
						{% for zone in zones %}
							<div class="d-flex ps-5 mb-5 mt-5  line-list">
								<a href="{{path('app_zone', {id: zone.name})}}" <span class="line-details">>
									{{ zone.name }}
									<id={{zone.id}}></span>
								</a>
							</div>
						{% endfor %}
					</div>
				</p>
			{% endblock body %}
		</div>
	</body>

	<!-- Footer -->
	<footer class="container mt-auto py-3 border-top">
		<div class="d-flex flex-wrap justify-content-between">
			<div class="col-md-4 d-flex align-items-center">
				<span class="me-1" style="color: red">
					<i class="fas fa-heart"></i>
				</span>
				<span class="text-muted me-1">The guys and gals at</span>
				<a target="_blank" href="https://www.plasticomnium.com/en/" style="color: #25a1dd" class="mb-3  mb-md-0 text-decoration-none lh-1">PlasticOmnium</a>
			</div>
			<div>
				<a href="#" onclick="event.preventDefault(); window.history.back();">
					<i class="fa fa-arrow-circle-o-left" aria-hidden="false">Page d'Accueil</i>
				</a>
			</div>
			<ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
				<li class="ms-3">
					<a class="text-muted" target="_blank" href="https://github.com/kiloutyg/DocAuPoste2/tree/staging2">
						<i class="fab fa-github"></i>
					</a>
				</li>
			</ul>
		</div>
	</footer>
	<!-- End Footer -->
</html>
