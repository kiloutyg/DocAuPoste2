{% extends 'base.html.twig' %}
{% block title %}
	Document pour
	{{button.name|split('.')|first|upper}}
	|
	{{ parent() }}
{% endblock %}
{% block body %}
	<div
		class="container">
		{% if uploads|length > 1 %}

			<div>
				<div
					class="justify-content-between align-items-center ">
					<h2>
						<strong>
							Documents pour
							{{button.name|split('.')|first|upper}}
						</strong>
					</h2>
					{% include 'services/uploads/uploaded.html.twig' %}
				</div>
			</div>
			{# {% elseif matchinUploads|length < 1 %} #}
		{% elseif uploads|length < 1 %}

			<div
				class="justify-content-between align-items-center ">
				<h2>
					<strong>
						Document pour
						{{button.name|split('.')|first|upper}}
					</strong>
				</h2>

				{% include 'services/uploads/uploaded.html.twig' %}

			</div>
		{% endif %}
	</div>
{% endblock %}
