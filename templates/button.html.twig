{% extends 'base.html.twig' %}
{% block title %}
	Document pour
	{{button.name|split('.')|first|upper}}
	|
	{{ parent() }}
{% endblock %}
{% block body %}
	<div class="container">
		{% set matchinguploads = [] %}
		{% for upload in uploads %}
			{% if upload.button.id is same as(button.id)  %}
				{% set matchinguploads = matchinguploads|merge([upload]) %}
			{% endif %}
		{% endfor %}
		{% if matchinguploads|length > 1 %}
			<div>
				<div class="justify-content-between align-items-center ">
					<h2>
						<strong>
							Documents pour
							{{button.name|split('.')|first|upper}}
						</strong>
					</h2>
					{% include 'services/uploads/uploaded.html.twig' %}
				</div>
			</div>
		{% elseif matchinguploads|length < 1 %}
			<div class="justify-content-between align-items-center ">
				<h2>
					<strong>
						Document pour
						{{button.name|split('.')|first|upper}}
					</strong>
				</h2>
				<p>
					<strong>
						Aucun document pour ce bouton
					</strong>
				</p>
				{% include 'services/uploads/uploaded.html.twig' %}

			</div>
		{% endif %}
	</div>
{% endblock %}
