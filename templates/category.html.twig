{% extends 'base.html.twig' %}
{% block title %}
	{{category.name|split('.')|first|upper}}
	|
	{{ parent() }}
{% endblock %}
{% block body %}
	<div class="inner-container flex-grow-1 d-flex flex-column">

		{% if app.user %}
			{% if  is_granted('ROLE_MANAGER') %}
				<aside class="position-absolute end-0">
					<a href="{{ path('app_category_manager', {categoryId: category.id}) }}" class="btn shadow  bg-dark " style="color:white">
						<span class="fa fa-gear"></span>
						<strong>
							<span class="button-text">Centre d'Administration de Catégories
							</span>
						</strong>
					</a>

				</aside>
			{% endif %}
		{% endif %}
		<p>
			<h2 class="text-justify mb-2 mt-4">
				<strong>
					{{ category.name|split('.')|first|upper}}
				</strong>
			</h2>
		</p>
		<div>
			<h3 class="text-justify">Les boutons de la catégorie
				{{ category.name|split('.')|first|upper}}
				:
			</h3>
			{% set matchingButtons = [] %}
			{% for button in buttons %}
				{% if button.category.id is same as(category.id)  %}
					{% set matchingButtons = matchingButtons|merge([button]) %}
				{% endif %}
			{% endfor %}
		</div>
		<div class="inner-container d-flex flex-column justify-content-center align-items-center flex-grow-1">
			{% if matchingButtons|length > 0 %}
				<div class="d-flex  mb-5 mt-5 line-list align-items-center justify-content-center flex-wrap">
					{% for button in matchingButtons %}

						<a class="btn btn-primary btn-lg m-5" role="button" aria-pressed="true" style="color:white" href="{{path('app_button', {buttonId: button.id, categoryId: button.category.id, productlineId: button.category.productLine.id, zoneId: button.category.productLine.zone.id})}}">
							<span class="line-details text-justify">
								{{ button.name|split('.')|first|upper}}

							</span>
						</a>

					{% endfor %}
				</div>
			{% else %}
				<div class="alert alert-danger">
					<a href="#" onclick="event.preventDefault(); window.history.back();">
						Il n'y a pas de boutons dans cette catégories.
					</a>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
