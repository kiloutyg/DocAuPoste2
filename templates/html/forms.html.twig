<body>
    <div class="justify-content-between align-items-center" style="margin-left: 10% ">
        <p>
            <a href="{{path('app_index')}}">
                <h5>Index</h5>
            </a>
        </p>
        <h2>
            <strong> Fauxremulere </strong>
        </h2>
        <p>
            <div class="col-12 col-md-8 ps-5 mb-5 mt-5 ">
                <h2 class="mb-4">La faux remu l'ére</h2>
            </div>
        </p>
    </div>
    <div class="container">
        <form class="d-flex justify-content-center align-items-center ml-1" action="{{path('app_upload')}}">
            <fieldset class="border">
                <legend class="mt-1">Ajouter un document</legend>
                <div class="ml-1">
                    <label class="border-top ml-1" for="upload">Document à ajouter : </label>
                    <input type="file" name="upload" id="upload" accept=".pdf" />
                </div>
                <div class="ml-1">
                    <label class="border-top ml-1" for="uploadname">Nom attribué au document : </label>
                    <input type="text" name="uploadname" id="uploadname" value="TchoungOdoC.pdf" />
                </div>
                <div class="ml-1">
                    <label class="border-top ml-1" for="uploadtype">Type de document : </label>
                    <select class="mt-1" name="uploadtype" id="uploadtype">
                    <option value="1">Document de travail</option>
                    <option value="2">Document de référence</option>
                    <option value="3">Document de formation</option>
                </select>
                </div>
                <div>
                    <legend class="border-top ml-1 mt-1">Rendre le document publique ?</legend>
                    <div>
                        <label class="border-top ml-1" for="publishingupload"><input type="radio" name="publishingupload" id="publishingupload" />publique</label>
                    </div>
                    <div>
                        <label class="border-top ml-1" for="publishingupload"><input type="radio" name="publishingupload" id="publishingupload" />privé</label>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>

