{% extends 'base.html.twig' %}
{% block title %}
	{{productLine.name|split('.')|first|capitalize}}
	|
	{{ parent() }}
{% endblock %}
{% block body %}
	<div class="container">

		{% if app.user %}
			{% if  is_granted('ROLE_LINE_ADMIN', object = null, field = null) %}
				<aside class="position-absolute end-0">
					<a href="{{ path('app_productline_admin', {productline: productLine.name}) }}" class="btn" style="color:white">Centre d'Administration de Ligne</a>
				</aside>
			{% endif %}
		{% endif %}
		<h2 class="text-justify mb-2 mt-5">
			<strong>
				{{ productLine.name|split('.')|first|capitalize}}
			</strong>
		</h2>
		<p>
			<div>
				<h3 class="mb-4 text-justify">Les catégories de la ligne
					{{ productLine.name|split('.')|first|capitalize }}
					:
				</h3>
				{% set matchingCategories = [] %}
				{% for category in categories %}
					{% if category.productLine.id is same as(productLine.id)  %}
						{% set matchingCategories = matchingCategories|merge([category]) %}
					{% endif %}
				{% endfor %}
			</p>
		</p>
		<p>
			<div>
				{% if matchingCategories|length > 0 %}
					{% for category in matchingCategories %}
						<div class="d-flex ps-5 mb-5 mt-5 line-list">
							<a class="btn btn-primary btn-lg btn-block " role="button" aria-pressed="true" href="{{path('app_category', {category: category.name, productline: category.productline.name, zone: category.productline.zone.name} )}}">
								<span class="line-details text-justify">
									{{ category.name|split('.')|first|capitalize }}
								</span>
							</a>
						</div>
					{% endfor %}
				{% else %}
					<div class="alert alert-danger">
						<a href="#" onclick="event.preventDefault(); window.history.back();">
							Il n'y a pas de catégories dans cette ligne.
						</a>
					</div>
				{% endif %}
			</div>
		</p>
	</div>
</p></div>{% endblock %}
