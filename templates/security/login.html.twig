{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto rounded bg-secondary">
				<div class="card border-0 shadow rounded-3 my-5 ">
					<h3 class="card-title text-center shadow mb-5 mt-5 fw-light fs-5">
						<strong>Sign In</strong>
					</h3>
					<form class="form-control" method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}
						{% if app.user is not null %}
							<div class="mb-3">
								{% for success in app.flashes('success') %}
									{{ success }}
								{% endfor %}
							</div>
							<div class="mb-3">
								You are logged in as
								{{ app.user.userIdentifier }},
								<a href="{{ path('app_logout') }}">Logout</a>
							</div>
						{% endif %}
						<div class="form-control shadow mb-3">
							<label for="username">Username</label>

							<input type="text" value="{{ last_username }}" name="name" id="name" class="form-control" placeholder="Username">
						</div>
						<div class="form-control shadow mb-3">
							<label for="floatingPassword">Password</label>

							<input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div class="d-grid">
							<button class="btn btn-primary shadow btn-login text-uppercase fw-bold" type="submit">Sign in</button>
						</div>
						<hr class="my-4">

					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
