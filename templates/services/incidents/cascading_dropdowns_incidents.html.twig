<div class="row">

	<div class="col-md-2 col-sm-2 mt-2 mb-2">
		<label for="incidents_zone" style="color:white">Zone :</label>
	</div>
	<div class="col-md-10 col-sm-10 mt-2 mb-2">
		<select name="incidents_zone" id="incidents_zone" class="form-select" required>
			<option value="" selected disabled hidden>Choisir une Zone</option>
		</select>
	</div>
	<div class="col-md-2 col-sm-2 mt-2 mb-2">
		<label for="incidents_productline" style="color:white">Ligne :</label>
	</div>
	<div class="col-md-10 col-sm-10 mt-2 mb-2">
		<select name="incidents_productline" id="incidents_productline" class="form-select" required>
			<option value="" selected disabled hidden>Choisir une Ligne</option>
		</select>
	</div>
</div>
<br>
<div class="row">
	<div class="col-md-2 col-sm-2 mt-2 mb-2">
		<label for="incidents_category" style="color:white">Type d'incident :</label>
	</div>
	<div class="col-md-10 col-sm-10 mt-2 mb-2">
		<select name="incidents_category" id="incidents_category" class="form-select" required>
			<option value="" selected disabled hidden>Choisir une catégorie d'incident</option>
		</select>
	</div>
</div>
<br><br>
{% if is_granted('ROLE_ADMIN') %}
	<div class="row mb-3">
		<label for="incidents_newFileName" class="form-label   ">Nouvelle Category d'Incident :</label>
		<div class="col-sm">
			<input type="text" class="form-control" id="incident_category_name" name="incident_category_name" placeholder="Entrer une nouvelle categorie d'incident (optionnel)">
		</div>
		<div class="col-sm-auto">
			<input type="button" id="create_incident_category" class="btn btn-secondary shadow border border-dark-subtle" value="Créer une nouvelle categorie d'incident">
		</div>
	</div>
	{% for incidentCategory in incidentCategories %}
		<div class="row mb-3">
			<li class="form-control shadow d-flex justify-content-between align-items-center">
				{{incidentCategory.name|split('.')|first|capitalize}}
				<a href="{{ path('app_incident_category_deletion', {incidentCategory : incidentCategory.name}) }}" type="button" class="btn btn-danger shadow border border-dark-subtle delete-incidentCategory">supprimer</a>
			</li>

		</div>
	{% endfor %}
{% endif %}
