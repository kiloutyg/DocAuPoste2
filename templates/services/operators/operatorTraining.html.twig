{% block stylesheets %}
	{{
		encore_entry_link_tags("app")
        }}
{% endblock %}
{% block javascripts %}
	{{encore_entry_script_tags('app')}}
	{{encore_entry_script_tags('toast')}}
{% endblock %}


<html>
	{% include "services/_toasts.html.twig" %}

	<body>


		<form id="trainingRecord-form" class="d-flex" action="{{path('app_training_record_form', {'uploadId': upload.id})}}" method="post" data-turbo-frame="training-records">
			<select name="team-trainingRecord-select" id="teamId" class="form-select mx-1" style="flex:1;">
				<option value="">Select a Team</option>
				{% for team in teams %}
					<option value="{{ team.id }}">{{ team.name }}</option>
				{% endfor %}
			</select>

			<select name="uap-trainingRecord-select" id="uapId" class="form-select mx-1" style="flex:1;">
				<option value="">Select a UAP</option>
				{% for uap in uaps %}
					<option value="{{ uap.id }}">{{ uap.name }}</option>
				{% endfor %}
			</select>
			<input type="submit" class="btn btn-primary" value="Filter" style="flex:0.5;">
		</form>
		{# <div id="training-records" data-turbo-frame="training-records">
														{% include "services/operators/component/_listOperator.html.twig" %}
													</div> #}
		<turbo-frame id="training-records" src="{{path('app_render_training_records', {'uploadId': upload.id})}}">
			{% include "services/operators/component/_listOperator.html.twig" %}
		</turbo-frame>

	</body>
</html>
