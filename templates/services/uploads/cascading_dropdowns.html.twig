{% block javascript_data %}
	<script>
		const zonesData = {{ zones|json_encode|raw }};
const productLinesData = {{ productLines|json_encode|raw }};
const categoriesData = {{ categories|json_encode|raw }};
const buttonsData = {{ buttons|json_encode|raw }};
