{% extends 'base.html.twig' %}

{% block title %}SupAdmin!
{% endblock %}

{% block body %}


	{% if zoneIdFromServer is not defined %}
		{% if zone is defined and zone is not null %}
			<script>
				zoneIdFromServer = parseInt('{{ zone.getId() }}')
			</script>
		{% endif %}
	{% endif %}

	{% if productLineIdFromServer is not defined %}
		{% if productLine is defined and productLine is not null %}
			<script>
				productLineIdFromServer = parseInt('{{ productLine.getId() }}')
			</script>
		{% endif %}
	{% endif %}

	{% if categoryIdFromServer is not defined %}
		{% if category is defined and category is not null %}
			<script>
				categoryIdFromServer = parseInt('{{ category.getId() }}')
			</script>
		{% endif %}
	{% endif %}

	{% if buttonIdFromServer is not defined %}
		{% if button is defined and button is not null %}
			<script>
				buttonIdFromServer = parseInt('{{ button.getId() }}')
			</script>
		{% endif %}
	{% endif %}


	<h1 class="my-4">
		<strong>Page de Super-Administration</strong>
	</h1>
	<h2 class="my-4">
		<strong>Formulaire de creation de compte utilisateur :</strong>
	</h2>
	<div class="card border-0 shadow rounded-3 my-5">
		<div class="card-body">
			<div class="row">
				<form method="POST" action="{{ path('app_super_admin_create_admin') }}">
					{% include "services/accountservices/create_account.html.twig" %}
				</form>
			</div>
		</div>
	</div>

	<h2 class="my-4">
		<strong>Formulaire de création de zones :</strong>
	</h2>
	<div class="card border-0 shadow rounded-3 my-5">
		<div class="card-body">
			<div class="row ">
				<form method="POST" action="{{ path('app_super_admin_create_zone') }}">

					<div class="card border-0 shadow rounded-3 my-5 bg-secondary">
						<div class="card-body">
							<div class="row d-flex align-items-center gy-lg-0 gy-5">
								<div class="col-md-6">

									<h3 class="card-title text-center mb-5 fw-light fs-5">
										<strong>Création de Zones</strong>
									</h3>

									<form class="form-floating" method="post">

										<div class="form-control mb-3">
											<label for="zonename">Nom de la zone</label>
											<input type="text" name="zonename" placeholder="Nom de la zone" required class="form-control" id="zonename">
										</div>

										<div class="d-grid">
											<button class="btn btn-primary btn-login text-first|uppercase fw-bold" type="submit">Valider</button>
										</div>

									</form>
									<hr class="my-4">

								</div>
								<div class="col-md-6">
									<h5 class="card-title text-center mb-5 fw-light fs-5">
										<strong>Liste des zones :</strong>
									</h5>
									<ul class="list-unstyled">
										{% for zone in zones %}
											<li class="form-control d-flex justify-content-between align-items-center mb-2">
												<a href="{{path('app_zone_admin', {zone: zone.name})}}" class="btn btn-link">
													-
													{{ zone.name|split('.')|first|upper }}
												</a>
												<a href="{{path('app_base_views_modification')}}" class="btn btn-info">
													Modifier
												</a>
												<a href="{{path('app_super_admin_delete_zone', {zoneId: zone.id})}}" class="btn btn-danger delete-zone">
													Supprimer
												</a>
											</li>
										{% endfor %}
									</ul>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

	<h2 class="my-4">
		<strong>Formulaire d'upload :</strong>
	</h2>
	<div class="card border-0 shadow rounded-3 my-5">
		<div class="card-body">
			<div class="row">
				<form action="{{path('app_generic_upload_files')}}" method="POST" enctype="multipart/form-data">
					{% include "services/uploads/upload.html.twig" %}
				</form>
			</div>
		</div>
	</div>
	<h2 class="my-4">
		<strong>Formulaire d'ajout d'Incident :</strong>
	</h2>
	<div class="card border-0 shadow rounded-3 my-5">
		<div class="card-body">
			<div class="row">

				<form action="{{path('app_generic_upload_incident_files')}}" method="POST" enctype="multipart/form-data">
					{% include "services/incidents/incidents.html.twig" %}
				</form>
			</div>
		</div>
	</div>
	<h2 class="my-4">

		<strong>Liste des fichiers chargés :</strong>

	</h2>
	<div class="card border-0 shadow rounded-3 my-5">
		<div class="card-body">
			<div class="row">

				<div>
					{% include "services/uploads/uploaded_list.html.twig" %}
				</div>

			</div>
		</div>
	</div>
	<h2 class="my-4">
		<strong>Liste des validations :</strong>

	</h2>
	<div class="card border-0 shadow rounded-3 my-5">
		<div class="card-body">
			<div class="row">

				<div>
					{% include "services/validation/validation_list.html.twig" %}
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
