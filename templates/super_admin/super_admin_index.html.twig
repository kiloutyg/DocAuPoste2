{% extends 'base.html.twig' %}

{% block title %}SupAdmin!
{% endblock %}

{% block body %}

	<h1 class="my-4">Page de Super-Administration</h1>

	<h2 class="my-4">Formulaire de creation de zones :</h2>
	<div class="card border-0 shadow rounded-3 my-5">
		<div class="card-body">
			<div class="row">
				<div class="card border-0 shadow rounded-3 my-5">
					<div class="card-body">
						<div class="row">
							<div class="col-md-6">
								<form class="form-floating" method="POST" action="{{ path('app_super_admin_create_zone') }}">
									<div class="mb-3">
										<label for="zonename">Nom de la zone</label>
										<input type="text" name="zonename" placeholder="Nom de la zone" required class="form-control" id="zonename">
									</div>
									<div class="d-grid">
										<button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Valider</button>
									</div>
								</form>
							</div>
							<div class="col-md-6">
								<h5>
									<strong>Liste des zones :</strong>
								</h5>
								<ul class="list-unstyled">
									{% for zone in zones %}
										<li class="d-flex justify-content-between align-items-center mb-2">
											<a href="{{path('app_zone', {id: zone.name})}}" class="btn btn-link">
												{{ zone.name|capitalize }}
												<span class="visually-hidden">{{ zone.id }}</span>
											</a>
											<a href="{{path('app_super_admin_delete_zone', {id: zone.name})}}" class="btn btn-danger">
												Supprimer
												<span class="visually-hidden">{{ zone.id }}</span>
											</a>
										</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<h2 class="my-4">Formulaire de creation de compte utilisateur :</h2>
	<div class="card border-0 shadow rounded-3 my-5">
		<div class="card-body">
			<div class="row">
				<form method="POST" action="{{ path('app_super_admin_create_admin') }}">
					{% include "services/accountservices/create_account.html.twig" %}
				</form>
			</div>
		</div>
	</div>

	<h2 class="my-4">Formulaire d'upload :</h2>
	<div class="card border-0 shadow rounded-3 my-5">
		<div class="card-body">
			<div class="row">

				<form action="{{path('app_generic_upload_files')}}" method="POST" enctype="multipart/form-data">
					{% include "services/uploads/upload.html.twig" %}
				</form>
			</div>
		</div>
	</div>

{% endblock %}
