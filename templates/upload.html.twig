{% extends 'base.html.twig' %}
{% block title %}
	Upload pour
	{{productLine.name}}
	|
	{{ parent() }}
{% endblock %}
{% block body %}
	<!DOCTYPE html>
	<html>
		<body>
			<div class="container">
				<div class="justify-content-between align-items-center ">

					<h2>
						<strong>
							Upload pour
							{{productLine.name}}
						</strong>
					</h2>
					<p>
						{{ dump(zone)}}
						{{ dump(productLine) }}
					</p>
					<p>
						<div class="  align-items-center card text-white bg-secondary my-5 py-4 text-center mydropzone">
							<div class="card-body">
								<p class="text-white m-0">Boost your file now !</p>

								<form action="{{path('app_upload_files', {id: productLine.id, name: productLine.zone.name})}}" method="POST" enctype="multipart/form-data">
									<div class="fallback">
										<input name="file" type="file" multiple/>
									</div>
									<button type="submit" class="btn btn-primary">Upload</button>
								</form>
							</div>
						</div>
					</p>
				</div>
			</div>
		</body>
	</html>
{% endblock %}
