{% extends 'base.html.twig' %}
{% block title %}
	Upload pour
	{{productLine.name}}
	|
	{{ parent() }}
{% endblock %}
{% block body %}
	<!DOCTYPE html>
	<html>
		<body>
			<div class="container">
				<div class="justify-content-between align-items-center ">

					<h2>
						<strong>
							Upload pour
							{{productLine.name}}
						</strong>
					</h2>
					<p>
						{{ dump(zone)}}
						{{ dump(productLine) }}
						{{ dump(uploads) }}
					</p>
					<p>
						<div class="  align-items-center card text-white bg-secondary my-5 py-4 text-center mydropzone">
							{% set matchinguploads = [] %}
							{% for upload in uploads %}
								{% if upload.productLine.id is same as(productLine.id)  %}
									{% set matchinguploads = matchinguploads|merge([upload]) %}
								{% endif %}
							{% endfor %}

							{% if matchinguploads|length > 0 %}
								{% for upload in matchinguploads %}
									<div class="d-flex ps-5 mb-5 mt-5 line-list">
										<a href="{{path('app_download_file', {filename:upload.filename, name:zone.name, id:productLine.name})}}" target="_blank">
											<span class="line-details">
												-{{ upload.filename }}
												<id={{upload.id}}>></span>
											</a>
											<a href="{{path('app_delete_file', {filename:upload.filename, name:zone.name, id:productLine.id})}}">
												<span class="line-details">
													- Delete
													<id={{upload.id}}>></span>
												</a>
											</div>

										{% endfor %}
									{% else %}
										<div class="alert alert-danger">
											<a href="{{path('app_base')}}">
												Il n'y a pas de documents disponible pour cette ligne.
											</a>
										</div>
										<div class="card-body">
											<p class="text-white m-0">Ajouter des fichiers :
											</p>

											<form action="{{path('app_upload_files', {id: productLine.id, name: productLine.zone.name})}}" method="POST" enctype="multipart/form-data">
												<div class="fallback">
													<input name="file" type="file" multiple/><button type="submit" class="btn btn-primary">Upload</button>
												</div>

											</form>
										</div>
									{% endif %}
								</div>
							</p>
						</p>
					</p>
				</p>
			</div>
		</body>
	</html>
</div></body></html>{% endblock %}
