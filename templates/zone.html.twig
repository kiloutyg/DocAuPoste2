{% extends 'base.html.twig' %}
{%block title %}
	{{zone.name}}
	|
	{{ parent() }}
{% endblock %}
{% block body %}
	<!DOCTYPE html>
	<html>
		<body>
			<div class="justify-content-between align-items-center" style="margin-left: 10% ">

				<h2>
					<strong>
						{{ zone.name }}
					</strong>
				</h2>
				<p>
					<div class="col-12 col-md-8 ps-5 mb-5 mt-5 ">
						<h2 class="mb-4">Les lignes de la zone
							{{zone.name}}:
						</h2>
						{{ dump(zone) }}
						{{ dump(zone.id) }}
						{{ dump(productLines) }}
						{{ dump(zone.productLines) }}

						{% set matchingProductLines = [] %}
						{% for productLine in productLines %}
							{% if productLine.zoneid.id == zone.id %}
								{% set matchingProductLines = matchingProductLines|merge([productLine]) %}
							{% endif %}
						{% endfor %}

						{% if matchingProductLines|length > 0 %}
							{% for productLine in matchingProductLines %}
								<div class="d-flex ps-5 mb-5 mt-5 line-list">
									<a href="{{path('app_productline', {product_line_id: productLine.id} )}}">
										<span class="line-details">
											-{{ productLine.name }}
											<id={{productLine.id}}>></span>
										</a>
									</div>
								{% endfor %}
							{% else %}
								<div class="alert alert-danger">
									<a href="{{path('app_base')}}">
										Il n'y a pas de lignes dans cette zone.
									</a>
								</div>
							{% endif %}


						</p>
					</p>
				</p>
			</body>
		</body>
	</html>
</p></body></body></html></body></html></div></body></html></p> </div></body></html>{% endblock %}
